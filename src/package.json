{
  "name": "@maestro-ai/mcp-server",
  "version": "4.0.0",
  "description": "MCP Server do Maestro v2.0 com otimizações, frontend-first e gerenciamento de tarefas",
  "type": "module",
  "main": "dist/stdio.js",
  "bin": {
    "maestro-mcp": "./dist/stdio.js"
  },
  "files": [
    "dist/**/*",
    "content/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/stdio.ts",
    "dev:http": "tsx watch src/index.ts",
    "start": "node dist/stdio.js",
    "start:http": "node dist/index.js",
    "test": "node node_modules/vitest/vitest.mjs --run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "pack": "npm pack",
    "publish:dry": "npm pack --dry-run"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "maestro",
    "ai",
    "cli",
    "npx"
  ],
  "author": "Maestro IA",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Matheus-Gama-deluna/Maestro.git",
    "directory": "src"
  },
  "homepage": "https://github.com/Matheus-Gama-deluna/Maestro#readme",
  "bugs": {
    "url": "https://github.com/Matheus-Gama-deluna/Maestro/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
